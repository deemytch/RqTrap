.container
  .row
    .col-md-1
      %h4
        =link_to root_path do
          .glyphicon.glyphicon-home
    .col-md-11
      %h4= full_trap_name(@trap)
  .row
    .col-md-12
      %table.table.table-condensed.table-hover.table-listing#rqs-listing
        =render 'rqs_listing'

:javascript
  var rq_raw = [];
  var faclient = '';
  var fasubscr = '';
  $(document).ready(function(){
    faclient = new Faye.Client('http://localhost:9292/fafa');
    fasubscr = faclient.subscribe("/#{@trap.id}", function(msg) {
      switch(msg['cmd']){
        case 'insert':
          $('#rqs-listing-header').after(msg['html']);
          break;
        case 'delete':
          $('tr#rq-id-'+msg['rqid']).remove();
          $('tr#rq-raw-id-'+msg['rqid']).remove();
          break;
      }
    });
  });
